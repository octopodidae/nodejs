<!DOCTYPE html>

<html>
    <head>
        <title>Ma todolist</title>
        <style>
            a {text-decoration: none; color: black;}
           .glyphicon-trash {color: #d9534f;}
           ul {
            list-style:none;
           }
        </style>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    </head>

    <body>
       <div class="container">
        <h1>Ma todolist</h1>

        <ul>
        <% todolist.forEach(function(todo, index) { %>
            <li><a href="/todo/supprimer/<%= index %>" class="glyphicon glyphicon-trash"></a> <%= todo %></li>
        <% }); %>
        </ul>

        <form action="/todo/ajouter/" method="post">
            <p>
                <label for="newtodo">Que dois-je faire ?</label>
                <input type="text" name="newtodo" id="newtodo" autofocus />
                <input type="submit" class="btn btn-primary value="Ajouter"/>
            </p>
        </form>
        </div>
        <script src="socket.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script>

             var myName="Bertrand";
             var socket= io.connect('http://178.62.18.212:3000/');

             socket.on('server', function(data) {
                console.log(data);
             }

             socket.emit('client', myName, 'hello');
        </script>

    </body>
</html>

